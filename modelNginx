server {
    server_name [NAME].alubyte.com;

    # 1. Definir la raíz de los archivos del frontend
    root /home/ubuntu/ruta/al/proyecto;
    index index.html;

    # 2. Servir el frontend (archivos estáticos)
    #    Esto asegura que se cargue tu index.html y client.js
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 3. Redirigir las llamadas a la API al backend en el puerto 3002
    location /api/ {
        proxy_pass http://localhost:6000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # ImportantÃ­simo para WebSockets y errores CORS
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

    }

    # 4. Redirigir las conexiones de Socket.IO al backend en el puerto 3002
    #    Esto es CRÍTICO para la comunicación en tiempo real.
    location /socket.io/ {
        proxy_pass http://localhost:6000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }


    # --- Configuración SSL de Certbot ---
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/[NAME].alubyte.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/[NAME].alubyte.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    client_max_body_size 20M;
    client_body_buffer_size 128k;
}

# --- Bloque de redirección HTTP a HTTPS de Certbot (no tocar) ---
server {
    if ($host = [NAME].alubyte.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name [NAME].alubyte.com;
    return 404; # managed by Certbot
}
